{
  "compilerOptions": {
      "declaration": true,
      "importHelpers": true,
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "target": "es2019",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": false
  },
  "include": [
      "src/**/*",
      "global.d.ts"
  ]
}
